<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/MembersHomepage">Back</a>
    </div>
  </nav>

  <div class="container mt-5">
    <h2 class="text-center">Search Members</h2>
    <form action="/Membersearch" method="POST" class="my-4">
      <div class="input-group">
        <input type="text" name="keyword" class="form-control" placeholder="Enter student ID, IG ID or role" required>
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>

    <% if (results && results.length > 0) { %>
      <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th>Student ID</th>
            <th>IG ID</th>
            <th>Role</th>
            <th>Joined Date</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(member => { %>
            <tr>
              <td><%= member.student_id %></td>
              <td><%= member.ig_id %></td>
              <td><%= member.role %></td>
              <td><%= member.joined_date %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else if (typeof results !== 'undefined') { %>
      <p class="text-center text-muted">No results found.</p>
    <% } %>
  </div>
</body>
</html>